

  <div class="form-group">

<%= form_tag notes_path do %>

	<p><%= text_area_tag :body, note.body, :class => "form-control", :placeholder => "write your message"%></p>
	

	<p><%= email_field_tag :recipient_email, note.recipient_email, :class => "form-control", :placeholder => "recipient email" %></p>
	
	
	<% unless current_user %>
	<p><%= email_field_tag :sender_email, note.sender_email, :class => "form-control", :placeholder => "your email" %></p>
	<% end %>

	<p> <% if note.errors.messages[:sender_email].present? %>
	  <%= note.errors.messages[:sender_email].first %>
	  <% end %></p>

	
	<div> 
		<h5>Deliver my note in
		<%= number_field_tag :days, note.days, :class => "form"%>
		days 
	

	<div>
		<p>OR</p>
		<%= check_box_tag :surprise_me %> 
        Randomize (1-30 days)
		<%= hidden_field_tag :reply_id, @reply_id %></h5>
	
	</div>
	</div>	

			<%= submit_tag "send message", :class => "btn btn-submit pull-right"%>


<br>


	
<% end %>
</div>
