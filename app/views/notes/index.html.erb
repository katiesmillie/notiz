

<div class="container">

<% if @notes.present? %>

<h2> my sent notes </h2>

<table class="table">
	<thead>
	<tr>
		<th>date created</th>
		<th>date delivered</th>
		<th>receipient</th>
		<th>note</th>
	</tr>
	</thead>
	<tbody>
	<% @notes.each do |n| %>
	<tr class="table">
		<td class="gray-text"><%= n.created_at.strftime("%b %d, %Y") %></td>
		<td class="gray-text"><%= n.send_date.strftime("%b %d, %Y")%></td>
  		<td class="gray-text"><%= n.recipient_email %></td>
 		<td class="gray-text"><%= n.body %></td>
	</tr>
	<% end %>
	</tbody>
</table>

<% end %>

</div>